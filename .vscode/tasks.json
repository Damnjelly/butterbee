{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "butterbee run",
            "type": "shell",
            "command": "gleam run",
            "options": {
                "cwd": "${workspaceFolder}/butterbee"
            }
        },
        {
            "label": "butterbee test",
            "type": "shell",
            "command": "gleam test",
            "options": {
                "cwd": "${workspaceFolder}/butterbee"
            }
        },
        {
            "label": "butterbee debug",
            "type": "shell",
            "command": "gleam test -- --debug",
            "options": {
                "cwd": "${workspaceFolder}/butterbee"
            }
        },
        {
            "label": "butterbee check",
            "type": "shell",
            "command": "gleam check",
            "options": {
                "cwd": "${workspaceFolder}/butterbee"
            }
        },
        {
            "label": "butterbee build",
            "type": "shell",
            "command": "gleam build",
            "options": {
                "cwd": "${workspaceFolder}/butterbee"
            }
        },
        {
            "label": "butterbidi build",
            "type": "shell",
            "command": "gleam build",
            "options": {
                "cwd": "${workspaceFolder}/butterbidi"
            }
        },
        {
            "label": "butterbidi check",
            "type": "shell",
            "command": "gleam check",
            "options": {
                "cwd": "${workspaceFolder}/butterbidi"
            }
        },
        {
            "label": "create birdie snapshots",
            "type": "shell",
            "command": "gleam run -m birdie",
            "options": {
                "cwd": "${workspaceFolder}/butterbee"
            }
        },
        {
            "label": "firefox: open test page",
            "type": "shell",
            "command": "firefox file:///${workspaceFolder}/butterbee/assets/test_page.html",
            "options": {
                "cwd": "${workspaceFolder}/butterbee"
            }
        }
    ]
}
